#include<iostream>
struct candybar//
{
char name[20];
double weight;
int calorie;
};
int main()
{
using namespace std;
candybar snack[3]=
{{
"Mocha Munch",
2.3,
350
},
{
"Moa Munch",
2.223,
3500
},{
"Mocha Munch",
2.1233333,
352330
}};//
//
cout << "Name: " << snack[0].name << endl;
cout << "Weight: " << snack[1].weight << endl;
cout << "Calorie: " << snack[2].calorie << endl;
cin.get(); //  
return 0;
}